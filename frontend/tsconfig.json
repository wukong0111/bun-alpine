{
	"compilerOptions": {
		// Browser environment
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,

		// Build handled by esbuild
		"noEmit": true,
		"allowImportingTsExtensions": true,

		// Strict type checking for frontend
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		// Frontend-specific flags
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"exactOptionalPropertyTypes": true,

		// Alpine.js types
		"types": ["@types/alpinejs"]
	},
	"include": ["src/**/*"],
	"exclude": ["../src/**/*", "../index.ts", "../*.ts"]
}
