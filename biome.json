{
	"files": {
		"includes": ["src/**", "index.ts"],
		"ignoreUnknown": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noImplicitAnyLet": "error"
			},
			"correctness": {
				"noUnusedVariables": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"trailingCommas": "all",
			"quoteStyle": "double"
		}
	}
}
