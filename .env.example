# Environment Configuration
NODE_ENV=development

# PostgreSQL Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ranking_dev
DATABASE_USER=dev_user
DATABASE_PASSWORD=dev_password

# Production PostgreSQL Configuration (Railway/other cloud providers)
# DATABASE_HOST=containers-us-west-xxx.railway.app
# DATABASE_PORT=5432
# DATABASE_NAME=railway
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-strong-password

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Base URL for OAuth redirects (callback will be BASE_URL/app/auth/callback)
BASE_URL=http://localhost:3000

# JWT Secret (generate a strong random string for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Admin API Key for backup operations
ADMIN_API_KEY=your-admin-api-key-for-backups

# Optional: SSL Configuration for production
# DATABASE_SSL=true
# DATABASE_SSL_REJECT_UNAUTHORIZED=false

# Optional: Connection Pool Settings
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10

# Optional: Query timeout settings
# DATABASE_QUERY_TIMEOUT=30000
# DATABASE_CONNECTION_TIMEOUT=5000

