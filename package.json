{
  "name": "bun-alpine",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development bun install:frontend && NODE_ENV=development bun --watch index.ts & cd frontend && bun run dev",
    "build": "bun install:frontend && cd frontend && bun run build",
    "start": "NODE_ENV=production bun index.ts",
    "start:dev": "NODE_ENV=development bun index.ts",
    "install:frontend": "cd frontend && bun install",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit && cd frontend && bun run type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@types/bun": "latest",
    "typescript": "^5.8.3",
    "typescript-language-server": "^4.3.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "@elysiajs/swagger": "^1.3.1",
    "elysia": "^1.3.5",
    "elysia-rate-limit": "^4.4.0",
    "elysiajs-helmet": "^1.0.2"
  }
}
